@using TestioProject.PL.Models
@model TestEditModel

@{
    ViewData["Title"] = "Create Test";
}
<div class="d-flex justify-content-center" style="margin-top: 50px;">
    <div style="position:relative; max-height: 400px;">
        <img src="~/svg/test_create_hum2.svg" alt="Alternate Text" style="width: 740px; margin-top: 71px; height: 500px; margin-left: -7px; width: 659px;" />
    </div>
    <div class="card" style="width: 500px; position:absolute; border: 4px solid rgba(0,0,0,.125);">
        <div class="card-body" style="width: 500px;">
            <div>
                <form asp-controller="Tests" asp-action="CreateOrEditTest" method="post">
                    <div class="col">
                        <input type="hidden" name="testId" value="@ViewBag.testId" />
                        <div>
                            @if (ViewBag.testId == 0)
                            {
                                <div style="display: flex; justify-content: center;"><h2>Test creating</h2></div>
                            }
                            else
                            {
                                <div style="display: flex; justify-content: center;"><h2>Test edit</h2></div>
                            }
                            <div class="mb-2" style="margin-top: 40px">
                                <label class="form-check-label">Title</label>
                                <input type="text" class="form-control" aria-label="Title" name="Title" style="border: 1px solid #d0d0d0; width: 435px; margin-top:10px;">
                            </div>
                            <div class="mb-2" style="width: 500px; margin-top: 20px; ">
                                <label class="form-check-label">Description</label><br />
                                <textarea name="Description" rows="2" style="width: 435px; margin-top:10px; height: 113px; border-radius: .25rem; outline:none; border: 1px solid #d0d0d0;"></textarea>
                            </div>
                            @if (ViewBag.isPrivate)
                            {
                                <div class="mb-2">
                                    <input style="width: 250px" type="text" class="form-control" placeholder="Code lock" aria-label="Code lock" name="CodeLock">
                                </div>
                            }
                            <div class="d-flex" style="margin-top: 35px;">
                                <span>Owner:</span>&nbsp;
                                <p>@User.Identity.Name</p>
                            </div>
                            <div style="margin-bottom: 12px;">
                                <button class="btn btn-primary" type="submit" asp-route-actionType=1 style="margin-top: 30px; width: 435px; background-color: #6310CB">Continue</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div style="margin-left: 130px; margin-top: 40px; max-height: 500px;">
        <img src="~/svg/test_create_hum_3.svg" alt="Alternate Text" style="width: 740px; margin-top: 70px; height: 500px; padding-right: 20px; margin-top: -2px;" />
    </div>
</div>