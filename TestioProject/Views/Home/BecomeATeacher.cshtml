@using TestioProject.PL.Models
@model WrittenLetterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Test";
}
<div class="d-flex justify-content-center" style="margin-top: 44px; margin-top: -48px;">
    <div style="position:relative; max-height: 400px;">
        <img src="~/svg/education.svg" alt="Alternate Text" style="width: 740px; margin-top: 164px; height: 500px; margin-left: -7px; width: 659px;" />
    </div>
    <div class="card" style="width: 500px; margin-top: 63px; position:absolute; border: 4px solid rgba(0,0,0,.125);">
        <div class="card-body" style="width: 500px;">
                <form asp-action="RequestToBecomeATeacher" method="post">
                    <input type="hidden" asp-for="User.Id" value="@ViewBag.userId" />
                    <div class="col">
                        <div>
                            <div style="display: flex; justify-content: center; margin-top: 5px"><h2>Leave request</h2></div>
                            <hr />
                            <div class="d-flex" style="margin-top: 19px;">
                                <span>Name:</span>&nbsp;
                                <p>@User.Identity.Name</p>
                            </div>
                            <hr />
                            <div class="mb-2" style="margin-top: 8px">
                                <label class="form-check-label">1. Have you had experience creating educational tests in the past? Write a few words</label>
                                <textarea name="experience" asp-for="Experience" rows="2" style="width: 435px; margin-top:10px; border-radius: .25rem; outline:none; border: 1px solid #d0d0d0;"></textarea>
                            </div>
                            <div class="mb-2" style="width: 500px; margin-top: 20px; ">
                                <label class="form-check-label">2. Reason: </label><br />
                                <textarea name="reason" rows="2" asp-for="Reason" style="width: 435px; margin-top:10px; border-radius: .25rem; outline:none; border: 1px solid #d0d0d0;"></textarea>
                            </div>
                            <div style="margin-bottom: 12px;">
                                <button class="btn btn-primary" type="submit" style="margin-top: 30px; width: 435px; background-color: #6310CB">Send</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    <div style="margin-left: 130px; margin-top: 40px; max-height: 500px;">
        <img src="~/svg/report.svg" alt="Alternate Text" style="width: 600px; margin-top: -2px; height: 400px; margin-top: -2px; margin-top: 178px; margin-left: 78px;" />
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
